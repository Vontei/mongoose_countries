extend layout 

block content
  a(href='/') Back
  if warning 
    p= warning
  h1 Add a country to the list.
  form(action='/new' method='post')
    label Country name
    input(type='text' name='name')
    label flag
    input(type='text' name='flagUrl')
    label Capital 
    input(type='text' name='capital')
    label Population 
    input(type='number' name='population')
    input(type='submit' name='submit' value='ADD')
